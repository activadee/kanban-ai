{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false,
        "pkgRoot": "."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/semrel-sync-cli-version.js ${nextRelease.version} && (cd cli && bun run build) && bun run build:binary",
        "publishCmd": "cd cli && npm publish --provenance --access public"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          "dist/kanban-ai-*"
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "cli/package.json",
          "bun.lock"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
