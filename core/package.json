{
  "name": "core",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "type-check": "tsc -b --pretty false",
    "lint": "echo 'no-op (inherits root lint)'",
    "test": "vitest run --coverage && bun run scripts/check-coverage.ts",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.66.0",
    "drizzle-orm": "^0.45.0",
    "@opencode-ai/sdk": "^1.0.129",
    "shared": "workspace:*",
    "simple-git": "^3.28.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "better-sqlite3": "^12.2.0",
    "@types/bun": "latest",
    "typescript": "^5.8.3"
  }
}
