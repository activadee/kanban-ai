{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "types": [
      "bun"
    ],
    "paths": {
      "shared": [
        "../shared/dist/index.d.ts"
      ],
      "shared/*": [
        "../shared/dist/*"
      ]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
