{
  "name": "kanban-ai",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./shared",
    "./core",
    "./cli"
  ],
  "scripts": {
    "dev": "turbo dev --filter=server --filter=client --filter=core --filter=shared",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "start:server": "bun run server/src/dev.ts",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "build:binary": "bun run scripts/build-binaries.ts",
    "build:binary:linux-x64": "bun run scripts/build-binaries.ts --target linux-x64",
    "build:binary:linux-arm64": "bun run scripts/build-binaries.ts --target linux-arm64",
    "build:binary:darwin-arm64": "bun run scripts/build-binaries.ts --target darwin-arm64",
    "build:binary:win-x64": "bun run scripts/build-binaries.ts --target win-x64",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=shared --filter=core --filter=server"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.5.5",
    "vitest": "^4.0.12",
    "@vitest/coverage-v8": "^4.0.12",
    "adm-zip": "^0.5.16"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}
